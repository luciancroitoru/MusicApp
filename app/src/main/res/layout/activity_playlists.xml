<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_main"
    tools:context="com.example.android.musicapp.PlaylistsActivity">

    <TextView
        android:id="@+id/description_playlists_text_view"
        style="@style/activity_description"
        android:text="@string/description_playlist_text_view" />

    <Button
        android:id="@+id/go_to_genre_from_playlist_button"
        style="@style/go_to_genre_from_playlist_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_playlists_text_view"
        android:layout_centerHorizontal="true"
        android:text="@string/go_to_genre_from_playlist_button" />
</RelativeLayout>
