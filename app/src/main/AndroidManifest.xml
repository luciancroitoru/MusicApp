<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MoodActivity"
            android:label="@string/category_mood"/>
        <activity android:name=".PlaylistsActivity"
            android:label="@string/category_playlists"/>
        <activity android:name=".GenreActivity"
            android:label="@string/category_genre"/>
        <activity android:name=".FavoriteActivity"
            android:label="@string/category_favorites"/>
        <activity android:name=".NowPlayingActivity"
            android:label="@string/category_now_playing"/>
    </application>

</manifest>